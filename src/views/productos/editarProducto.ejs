<%- include('../partials/head.ejs')%>
<link rel="stylesheet" href="/css/stylesEditarProducto.css">
<title>Editar producto</title>
</head>
<body>

    <%- include('../partials/header.ejs')%>

    <main class="create-registro">
        <h2 class="titulo">EDITAR PRODUCTO</h2>
        <section class="create-form">
            <form action="create" method="POST" class="create">
                <div class="create-container">
                    <label>Producto</label>
                    <br>
                    <img src="/images/tele7.jpg" alt="TV">
                    <br>
                    <label for="">Editar nombre</label>
                    <br>
                    <br>
                    <input type="name" class="input-create" name="name" required>
                    <br>    
                    <br>
                    <label>Editar descripcion de producto</label>
                    <br>
                    <br>
                    <textarea name="description" class="description-create"></textarea>
                    <br>
                    <br>
                    <label>Editar imagenes</label>
                    <br>
                    <br>
                    <input class="input-create" type="file" name="photo" accept="jpg,jpeg" multiple required>
                    <br>
                    <br>
                    <label>Categor√≠a</label>
                    <br>
                    <br>
                    <select class="input-create" name="category" required>
                        <option value="televisor">Televisores</option>
                        <option value="aire">Aires Acondicionados</option>
                        <option value="lavarropa">Lavarropas</option>
                        <option value="horno">Hornos</option>
                        <option value="heladera">Heladeras</option>
                    </select>
                    <br>
                    <br>
                    <label>Precio</label>
                    <br>
                    <br>
                    <input class= "input-create-precio" type="number" name="price" placeholder="$50.000" required>
                </div>
                <br>
                <div class="button-container">
                    <button class="create-button" type="submit">Guardar cambios</button>
                    <button class="create-button" type="reset">Borrar producto</button>
                    </div>
            </form>
        </section>
        <br>
        <br>
    </main>

    <%- include('../partials/footer.ejs')%>

</body>