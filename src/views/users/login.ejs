<%- include('../partials/head.ejs')%>
<title>Ingresá</title>
<link rel="stylesheet" href="/css/stylesLogin.css">
</head>
<link rel="shortcut icon" href="/images/logo-mini-title.svg" style="color: rgb(10,74,173);">
<body>
  
  <%- include('../partials/header.ejs')%> 

  <main class="main-login">   
    <br>   
    <section class="login-form">
      <form action="/users/login" method="POST" class="login" id="formulario-login">
        <p class="text-login"><strong>INGRESAR CON MAIL Y CONTRASEÑA</strong><p>
          <br>
        <div class="form-container"> 
          <label for="email">Email:</label>
          <br>
          <br>
          <input id="inputEmail" class="input-registro <%= locals.errors && errors.email ? 'is-invalid' : null%>" type="email" name="email" placeholder="ejemplo@hotmail.com"
          value="<%= locals.oldData && oldData.email %>">
          <%if (locals.errors && errors.email){%>    
            <div class="advertencia">
                <%=errors.email.msg%>
            </div>
        <%}%>    
          <br>
          <span class="error-mensaje errorEmail"></span>
          <br>
        <label for="password">Contraseña:</label>
          <br>
          <br>
          <input id="inputPassword" class="input-login mostrarEsconderPassword <%= locals.errors && errors.password ? 'is-invalid' : null%>" type="password" name="password">
          <p class="mostrarPassword"><i class="far fa-eye"></i></p>
          <p class="esconderPassword"><i class="far fa-eye-slash"></i></p>
          <%if (locals.errors && errors.password){%>    
            <div class="advertencia">
                <%=errors.password.msg%>
            </div>
        <%}%> 
          <br>
          <span class="error-mensaje errorPassword acomodarMensaje"></span>
        </div>
        <div class="forgot">
          <span><a href="#">Olvidé mi usuario</a></span>
          <br>
          <span><a href="#">Olvide mi contraseña</a></span>
        </div>
          <br>
        <div>
        <label>Recuérdame</label>
        <input type="checkbox" name="recordar" value="true" checked>
      </div>
          <br>
      <div class="button">
          <button class="login-button" type="submit">Ingresar</button>
      </div>
      <div class="crear-cuenta-nueva">
        <p>No tenes una cuenta?</p>
        <a href="/users/registro">Crear cuenta</a>
      </div>
      <br>
    </form>
  </section> 
  <br>
  <br>
  <br>
  <br>
  <script src="/js/validacionLogin.js"></script>
  <script src="/js/mostrarContraseña.js"></script>
</main>

<%- include('../partials/footer.ejs')%>

</body>