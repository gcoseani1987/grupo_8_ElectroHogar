<%- include('../partials/head.ejs')%>
<title>Registrate</title>
<link rel="stylesheet" href="/css/stylesRegistro.css">
</head>
<link rel="shortcut icon" href="/images/logo-mini-title.svg" style="color: rgb(10,74,173);">
<body>
  
  <%- include('../partials/header.ejs')%>
  
  <main class="main-registro">    
    <section class="registro-form">
      <p class="text-registro"><strong>REGISTRATE Y EMPEZÁ A COMPRAR</strong><p>
        <br>
        <div class="form-container">
          <form action="/users/registro" method="POST" class="registro" enctype="multipart/form-data">
            <label for="nombre">Nombre:</label>
            <br>
            <br>
            <input class="input-registro <%= locals.errors && errors.nombre ? 'is-invalid' : null%>" type="text" name="nombre"
            value="<%= locals.oldData && oldData.nombre %>">
            <%if (locals.errors && errors.nombre){%>    
              <div class="advertencia">
                  <%=errors.nombre.msg%>
              </div>
          <%}%>
            <br>
            <br>
            <label for="apellido">Apellido:</label>
            <br> 
            <br>
            <input class="input-registro<%= locals.errors && errors.apellido ? 'is-invalid' : null%>" type="text" name="apellido"
            value="<%= locals.oldData && oldData.apellido %>">
            <%if (locals.errors && errors.apellido){%>    
              <div class="advertencia">
                  <%=errors.apellido.msg%>
              </div>
          <%}%>            
            <br>
            <br> 
            <label for="email">Email:</label>
            <br>
            <br>
            <input class="input-registro<%= locals.errors && errors.email ? 'is-invalid' : null%>" type="email" name="email" placeholder="ejemplo@hotmail.com"
            value="<%= locals.oldData && oldData.email %>">
            <%if (locals.errors && errors.email){%>    
              <div class="advertencia">
                  <%=errors.email.msg%>
              </div>
          <%}%>    
            <br>
            <br>
            <label for="imagen">Imagen de perfil:</label>
            <br>
            <br>
            <input name="imagen" class="input-registro" type="file">
            <%if (locals.errors && errors.imagen){%>    
              <div class="advertencia">
                  <%=errors.imagen.msg%>
              </div>
            <%}%>
            <br>
            <br>
            <label for="password">Contraseña:</label>
            <br>
            <br>
            <input class="input-registro" type="password" name="password">
            <%if (locals.errors && errors.password){%>    
              <div class="advertencia">
                  <%=errors.password.msg%>
              </div>
            <%}%>
            <br>
            <br>
            <label for="password2">Repita su contraseña:</label>
            <br>
            <br>
            <input class="input-registro" type="password" name="password2">
            <%if (locals.errors && errors.password2){%>    
              <div class="advertencia">
                  <%=errors.password2.msg%>
              </div>
            <%}%>
        </div>
          <br>
        <div class="button">
          <button class="button-registro" type="submit">Crear cuenta</button>
        </div>
          <br>
        </form>
        <div class="iniciar-sesion">
          <p>Ya tenes una cuenta?</p>
          <a href="/users/login">Ingresá acá</a>
        </div>
    </section> 
    <br>
    <br>
  </main>
 
  <%- include('../partials/footer.ejs')%>

</body>